<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.muiltmodel.dao.UserDao">
    <select id="getAll" resultType="com.cn.muiltmodel.entity.User">
        SELECT * FROM smbms_user;
    </select>
    <insert id="addUser" parameterType="user">
        INSERT INTO smbms_user(userCode, userName, userPassword, gender,
        birthday) VALUES (#{userCode},#{userName},#{userPassword},#{gender},#{birthday})
    </insert>
    <delete id="delUser" parameterType="int">
        DELETE FROM smbms_user WHERE id=#{id}
    </delete>
    <update id="updUser" parameterType="user">
        UPDATE smbms_user
        <trim prefix="set" suffix="where id=${id}" suffixOverrides=",">
            <if test="userName!= null">
                userName=#{userName},
            </if>
            <if test="userPassword!= null">
                userPassword=#{userPassword},
            </if>
        </trim>
    </update>
    <!--用户字段-->
    <sql id="usr_filed">
        id,userCode, userName, userPassword, gender,birthday
    </sql>
    <select id="findByParam" parameterType="map" resultType="user">
        SELECT <include refid="usr_filed"/> FROM smbms_user
        <trim prefix="where" suffixOverrides="and|or">
            <if test="id !=null">
               id=#{id} and
            </if>
            <if test="userCode!=null">
                userCode =#{userCode}
            </if>
        </trim>
    </select>

    <select id="getByMap" resultType="user" parameterType="map">
        SELECT <include refid="usr_filed"/> FROM smbms_user
        <trim prefix="where" suffixOverrides="and|or">
            <if test="userCode !=null">
                userCode=#{userCode} and
            </if>
            <if test="userName!=null">
                userName LIKE '%${userName}%' and
            </if>
            <if test="birthday !=null">
                birthday=#{birthday}
            </if>
        </trim>
    </select>
</mapper>